<h1>All Tasks</h1>
<p>
<%= link_to "Create new Task", new_task_path %>
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
    </tr>
<% @tasks.each do |task| %>
<tr>
<td><%= task.title %></td>
<td><%= task.description %></td>
<td> <%= link_to "Edit", edit_task_path(task) %></td>
<td><%= link_to "Show", task_path(task) %></td>
<td><%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Do you want to delete this task permanently?"} %></td>
</tr>
<% end %>
</table>