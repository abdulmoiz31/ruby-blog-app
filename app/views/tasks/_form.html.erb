<% if @task.errors.any? %>
    <h3>Errors...</h3>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    <% end %>
    </ul>
    <%= form_for @task do |f| %>
    <p>
    <%= f.label :title %>
    
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :description %>
    
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.submit "Create Task", disable_with: 'Creating...' %>
    </p>
<% end %>
<%= link_to "Back to List", tasks_path %>